{
  "manifest_version": 3,
  "name": "Chrome Extension React/TypeScript Starter",
  "version": "1.0",
  "description": "Template for a Chrome Extension using React/TypeScript and built with WebPack",
  "icons": {
    "16": "images/favicon-16x16.png",
    "32": "images/favicon-32x32.png",
    "180": "images/apple-touch-icon.png",
    "192": "images/android-chrome-192x192.png",
    "512": "images/android-chrome-512x512.png"
  },
  "offline_enabled": true,
  "permissions": ["storage", "activeTab", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  }
}
